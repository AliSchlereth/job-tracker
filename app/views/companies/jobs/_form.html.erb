<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>
  <%= f.collection_select :category_id, @categories, :id, :title, include_black: true %>

  <%= f.submit class:"btn btn-default"%>
<% end %>

<%= link_to "Create Category", new_category_path, class:"btn btn-default" %>
