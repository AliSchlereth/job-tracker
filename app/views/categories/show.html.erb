<p><%= link_to "Back to All Categories", categories_path, class:"btn btn-default"%></p>


<h1><%= @category.title %> Jobs</h1>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">
      <% @category.jobs.each do |job| %>
        <div class="panel panel-default">
          <div class="panel-body">
            <ul class=category_<%= @category.id %>>
              <%= job.title %>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
